<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localViewModels="clr-namespace:FeatureLogging.ViewModels"
    x:Class="FeatureLogging.Views.About"
    x:DataType="localViewModels:AboutViewModel"
    Title="{Binding Title}">
    
    <Grid Margin="20" RowDefinitions="Auto">
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="{AppThemeBinding Light={DynamicResource Gray100}, Dark={DynamicResource Gray600}}" Margin="0,0,0,8" Padding="20">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8"></RoundRectangle>
            </Border.StrokeShape>
            <Grid ColumnDefinitions="180, *">
                <Image Grid.Column="0" Source="app_image.png" Aspect="AspectFit" VerticalOptions="Center" />
                <VerticalStackLayout Grid.Column="1" Spacing="0" VerticalOptions="Center">
                    <Label Text="{Binding AppTitle}" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" TextColor="{DynamicResource PrimaryTextColor}" FontFamily="OpenSans-ExtraBold" />
                    <Label Text="{Binding Version}" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" TextColor="{DynamicResource PrimaryTextColor}" FontFamily="OpenSans-Bold" />
                    <Label Text="{Binding Author}" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" TextColor="{DynamicResource Tertiary}" FontFamily="OpenSans-Bold" />
                    <Label Text="{Binding Copyright}" FontSize="20" HorizontalOptions="Center" VerticalOptions="Center" TextColor="{DynamicResource Tertiary}" FontFamily="OpenSans-Regular" />
                    <Label Text="{Binding Rights}" FontSize="20" HorizontalOptions="Center" VerticalOptions="Center" TextColor="{DynamicResource Tertiary}" FontFamily="OpenSans-Regular" />
                </VerticalStackLayout>
            </Grid>
        </Border>
    </Grid>    
</ContentPage>