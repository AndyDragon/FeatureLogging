<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localViewModels="clr-namespace:FeatureLogging.ViewModels"
    x:Class="FeatureLogging.Views.FeatureEditor"
    x:DataType="localViewModels:MainViewModel"
    Title="Feature">

    <Shell.ToolbarItems>
        <ToolbarItem
            Text="Remove feature"
            Command="{Binding RemoveFeatureCommand}"
            Priority="1"
            Order="Primary" />
    </Shell.ToolbarItems>

    <VerticalStackLayout Margin="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                VerticalOptions="Center"
                Text="Is picked" />
            <CheckBox
                Grid.Column="1"
                VerticalOptions="Center"
                IsChecked="{Binding SelectedFeature.IsPicked, Mode=TwoWay}" />
        </Grid>
        <Grid
            Margin="0,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Entry
                Grid.Column="0"
                VerticalOptions="Center"
                Placeholder="enter the post link"
                Text="{Binding SelectedFeature.PostLink, Mode=TwoWay}" />
            <Button
                Grid.Column="1"
                VerticalOptions="Center"
                Margin="2,0"
                Command="{Binding PastePostLinkCommand}"
                Text="Paste" />
            <Button
                Grid.Column="2"
                VerticalOptions="Center"
                Margin="2,0"
                Command="{Binding LoadPostCommand}"
                Text="Lost post" />
        </Grid>
        <Grid
            Margin="0,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Entry
                Grid.Column="0"
                VerticalOptions="Center"
                Placeholder="enter the user's alias without '@'"
                Text="{Binding SelectedFeature.UserAlias, Mode=TwoWay}" />
            <Button
                Grid.Column="1"
                VerticalOptions="Center"
                Margin="2,0"
                Command="{Binding PasteUserAliasCommand}"
                Text="Paste" />
        </Grid>
        <Grid
            Margin="0,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Entry
                Grid.Column="0"
                VerticalOptions="Center"
                Placeholder="enter the user's name"
                Text="{Binding SelectedFeature.UserName, Mode=TwoWay}" />
            <Button
                Grid.Column="1"
                VerticalOptions="Center"
                Margin="2,0"
                Command="{Binding PasteUserNameCommand}"
                Text="Paste" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>
