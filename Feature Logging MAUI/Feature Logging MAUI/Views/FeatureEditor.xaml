<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FeatureLogging.Views.FeatureEditor"
             xmlns:local="clr-namespace:FeatureLogging"
             xmlns:localVM="clr-namespace:FeatureLogging.ViewModels"
             Title="Feature"
             x:DataType="localVM:Feature">
    <VerticalStackLayout Margin="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                VerticalOptions="Center"
                Text="Is picked" />
            <CheckBox
                Grid.Column="1"
                VerticalOptions="Center"
                IsChecked="{Binding IsPicked, Mode=TwoWay}" />
        </Grid>
        <Grid
            Margin="0,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Entry
                Grid.Column="0"
                VerticalOptions="Center"
                Placeholder="enter the post link"
                Text="{Binding PostLink, Mode=TwoWay}" />
            <Button
                Grid.Column="1"
                VerticalOptions="Center"
                Margin="2,0"
                Command="{Binding PastePostLinkCommand}"
                Text="Paste" />
            <Button
                Grid.Column="2"
                VerticalOptions="Center"
                Margin="2,0"
                Command="{Binding LoadFeatureCommand}"
                Text="Lost post" />
        </Grid>
        <Grid
            Margin="0,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Entry
                Grid.Column="0"
                VerticalOptions="Center"
                Placeholder="enter the user's alias without '@'"
                Text="{Binding UserAlias, Mode=TwoWay}" />
            <Button
                Grid.Column="1"
                VerticalOptions="Center"
                Margin="2,0"
                Command="{Binding PasteUserAliasCommand}"
                Text="Paste" />
        </Grid>
        <Grid
            Margin="0,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Entry
                Grid.Column="0"
                VerticalOptions="Center"
                Placeholder="enter the user's name"
                Text="{Binding UserName, Mode=TwoWay}" />
            <Button
                Grid.Column="1"
                VerticalOptions="Center"
                Margin="2,0"
                Command="{Binding PasteUserNameCommand}"
                Text="Paste" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>
