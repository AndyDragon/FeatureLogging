<UserControl 
    x:Class="FeatureLogging.PlotLegend"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:local="clr-namespace:FeatureLogging"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:OxyColorToBrushConverter x:Key="OxyColorToBrushConverter" />
    </UserControl.Resources>
    <StackPanel 
        Orientation="Vertical" 
        Margin="20">
        <TextBlock 
            Text="Legend" 
            FontSize="12" 
            Margin="0,0,0,8"/>
        <ItemsControl ItemsSource="{Binding Slices}">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="oxy:PieSlice">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="140" />
                            <ColumnDefinition Width="32" />
                        </Grid.ColumnDefinitions>
                        <Rectangle
                            Grid.Column="0"
                            Width="12"
                            Height="12"
                            VerticalAlignment="Center"
                            Fill="{Binding ActualFillColor, Converter={StaticResource OxyColorToBrushConverter}}"
                            StrokeThickness="1.2"
                            Stroke="Black" />
                        <TextBlock
                            Grid.Column="1"
                            Text="{Binding Label}"
                            FontSize="10" 
                            VerticalAlignment="Center"
                            Margin="4,0,0,1" />
                        <TextBlock
                            Grid.Column="2"
                            Text="{Binding Value}"
                            FontSize="11" 
                            VerticalAlignment="Center"
                            TextAlignment="Right"
                            Margin="4,0,0,1" />
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
